<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrudProject</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CrudProject.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-premium py-3 mb-4 shadow-sm">
                <div class="container">
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-layers-half"></i> CrudProject
                    </a>
                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="bi bi-list fs-3"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav align-items-center">
                            <li class="nav-item d-none" id="navLogout">
                                <a class="btn btn-outline-danger btn-sm px-3 rounded-pill fw-bold" href="javascript:void(0)" onclick="logout()">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container flex-grow-1">
            <main role="main" class="pb-5">
                @RenderBody()
            </main>
        </div>

        <footer class="py-4 mt-auto border-top bg-white">
            <div class="container text-center">
                <span class="text-muted small">&copy; 2026 - CrudProject - Professional User Management</span>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function checkAuth() {
            const token = localStorage.getItem('jwt_token');
            const navLogout = document.getElementById('navLogout');
            
            if (token) {
                if (navLogout) navLogout.classList.remove('d-none');
            } else {
                if (navLogout) navLogout.classList.add('d-none');
            }
        }

        function logout() {
            localStorage.removeItem('jwt_token');
            localStorage.removeItem('user_info');
            window.location.href = '/Account/Login';
        }

        document.addEventListener('DOMContentLoaded', checkAuth);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
