@{
    Layout = "_Layout";
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center align-items-center animate-fade-in" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4">
        <div class="premium-card p-5">
            <div class="text-center mb-4 p-4" style="background-color: var(--bs-modal-footer-bg); border-bottom: 1px solid #dee2e6; margin: -3rem -3rem 2.5rem -3rem; border-top-left-radius: var(--radius-lg); border-top-right-radius: var(--radius-lg);">
                <div class="bg-warning bg-gradient rounded-circle d-inline-flex p-3 mb-3 shadow">
                    <i class="bi bi-key text-white fs-2"></i>
                </div>
                <h2 class="fw-bold mb-1">Forgot Password</h2>
                <p class="text-muted small">Enter your email to reset password</p>
            </div>

            <form id="forgotPasswordForm" novalidate>
                <div class="mb-4">
                    <label class="form-label fw-semibold small">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-envelope"></i></span>
                        <input type="email" class="form-control form-control-premium" id="forgotEmail" placeholder="example@gmail.com" required>
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>
                </div>

                <div id="forgotError" class="alert alert-danger d-none border-0 shadow-sm py-2 mb-3 small animate-fade-in"></div>
                <div id="forgotSuccess" class="alert alert-success d-none border-0 shadow-sm py-2 mb-3 small animate-fade-in"></div>

                <button type="submit" class="btn btn-premium w-100 py-3 mb-4">
                    <span id="forgotBtnText">Send Reset Code</span>
                    <span id="forgotBtnLoader" class="spinner-border spinner-border-sm d-none"></span>
                </button>
                
                <div class="text-center pt-3 border-top">
                    <p class="mb-0 text-muted small">Remember your password?</p>
                    <a href="/Account/Login" class="text-primary fw-bold text-decoration-none">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function isValidEmail(email) {
            var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailRegex.test(email);
        }

        document.getElementById('forgotPasswordForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            var form = e.target;
            var email = document.getElementById('forgotEmail');
            var errorDiv = document.getElementById('forgotError');
            var successDiv = document.getElementById('forgotSuccess');
            var btnText = document.getElementById('forgotBtnText');
            var btnLoader = document.getElementById('forgotBtnLoader');
            
            errorDiv.classList.add('d-none');
            successDiv.classList.add('d-none');
            form.classList.remove('was-validated');

            var errors = [];

            if (!email.value) {
                errors.push("Email is required.");
                email.classList.add('is-invalid');
            } else if (!isValidEmail(email.value)) {
                errors.push("Please enter a valid email address.");
                email.classList.add('is-invalid');
            } else {
                email.classList.remove('is-invalid');
            }

            if (errors.length > 0) {
                var errorHtml = '<ul class="mb-0 ps-3">';
                for (var i = 0; i < errors.length; i++) {
                    errorHtml += '<li>' + errors[i] + '</li>';
                }
                errorHtml += '</ul>';
                errorDiv.innerHTML = errorHtml;
                errorDiv.classList.remove('d-none');
                return;
            }

            btnText.classList.add('d-none');
            btnLoader.classList.remove('d-none');

            fetch('/api/auth/forgot-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    email: email.value
                })
            })
            .then(function(response) {
                if (response.ok) {
                    return response.json();
                } else {
                    return response.json().then(function(errorData) {
                        throw new Error(errorData.message || "Failed to send reset code");
                    });
                }
            })
            .then(function(data) {
                successDiv.innerHTML = data.message;
                successDiv.classList.remove('d-none');
                setTimeout(function() {
                    window.location.href = '/Account/ResetPassword?email=' + encodeURIComponent(email.value);
                }, 3000);
            })
            .catch(function(error) {
                errorDiv.innerText = error.message || "Network error. Please try again.";
                errorDiv.classList.remove('d-none');
                btnText.classList.remove('d-none');
                btnLoader.classList.add('d-none');
            });
        });

        document.getElementById('forgotPasswordForm').addEventListener('input', function(e) {
            if (e.target.id === 'forgotEmail') {
                var isValid = e.target.value && isValidEmail(e.target.value);
                e.target.classList.toggle('is-invalid', !isValid);
                if (isValid) {
                    e.target.classList.add('is-valid');
                } else {
                    e.target.classList.remove('is-valid');
                }
            }
        });
    </script>
}