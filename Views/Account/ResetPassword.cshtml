@{
    Layout = "_Layout";
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center align-items-center animate-fade-in" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4">
        <div class="premium-card p-5">
            <div class="text-center mb-4 p-4" style="background-color: var(--bs-modal-footer-bg); border-bottom: 1px solid #dee2e6; margin: -3rem -3rem 2.5rem -3rem; border-top-left-radius: var(--radius-lg); border-top-right-radius: var(--radius-lg);">
                <div class="bg-success bg-gradient rounded-circle d-inline-flex p-3 mb-3 shadow">
                    <i class="bi bi-shield-lock text-white fs-2"></i>
                </div>
                <h2 class="fw-bold mb-1">Reset Password</h2>
                <p class="text-muted small">Enter reset code and new password</p>
            </div>

            <form id="resetPasswordForm" novalidate>
                <div class="mb-3">
                    <label class="form-label fw-semibold small">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-envelope"></i></span>
                        <input type="email" class="form-control form-control-premium" id="resetEmail" placeholder="example@gmail.com" required readonly>
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold small">Reset Code</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-key"></i></span>
                        <input type="text" class="form-control form-control-premium" id="resetToken" placeholder="Enter 6-digit code" required maxlength="6">
                        <div class="invalid-feedback">Please enter the 6-digit reset code.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold small">New Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control form-control-premium" id="newPassword" placeholder="••••••••" required minlength="6">
                        <div class="invalid-feedback">Password must be at least 6 characters long.</div>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold small">Confirm New Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control form-control-premium" id="confirmPassword" placeholder="••••••••" required>
                        <div class="invalid-feedback">Passwords must match.</div>
                    </div>
                </div>

                <div id="resetError" class="alert alert-danger d-none border-0 shadow-sm py-2 mb-3 small animate-fade-in"></div>
                <div id="resetSuccess" class="alert alert-success d-none border-0 shadow-sm py-2 mb-3 small animate-fade-in"></div>

                <button type="submit" class="btn btn-premium w-100 py-3 mb-4">
                    <span id="resetBtnText">Reset Password</span>
                    <span id="resetBtnLoader" class="spinner-border spinner-border-sm d-none"></span>
                </button>
                
                <div class="text-center pt-3 border-top">
                    <p class="mb-0 text-muted small">Didn't receive the code?</p>
                    <a href="/Account/ForgotPassword" class="text-primary fw-bold text-decoration-none">Send Again</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function isValidEmail(email) {
            var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            return emailRegex.test(email);
        }

        // Get email from URL parameter
        const urlParams = new URLSearchParams(window.location.search);
        const emailParam = urlParams.get('email');
        if (emailParam) {
            document.getElementById('resetEmail').value = emailParam;
        }

        document.getElementById('resetPasswordForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            var form = e.target;
            var email = document.getElementById('resetEmail');
            var resetToken = document.getElementById('resetToken');
            var newPassword = document.getElementById('newPassword');
            var confirmPassword = document.getElementById('confirmPassword');
            var errorDiv = document.getElementById('resetError');
            var successDiv = document.getElementById('resetSuccess');
            var btnText = document.getElementById('resetBtnText');
            var btnLoader = document.getElementById('resetBtnLoader');
            
            errorDiv.classList.add('d-none');
            successDiv.classList.add('d-none');
            form.classList.remove('was-validated');

            var errors = [];

            if (!email.value) {
                errors.push("Email is required.");
                email.classList.add('is-invalid');
            } else if (!isValidEmail(email.value)) {
                errors.push("Please enter a valid email address.");
                email.classList.add('is-invalid');
            } else {
                email.classList.remove('is-invalid');
            }

            if (!resetToken.value) {
                errors.push("Reset code is required.");
                resetToken.classList.add('is-invalid');
            } else if (resetToken.value.length !== 6) {
                errors.push("Reset code must be 6 digits.");
                resetToken.classList.add('is-invalid');
            } else {
                resetToken.classList.remove('is-invalid');
            }

            if (!newPassword.value) {
                errors.push("New password is required.");
                newPassword.classList.add('is-invalid');
            } else if (newPassword.value.length < 6) {
                errors.push("Password must be at least 6 characters long.");
                newPassword.classList.add('is-invalid');
            } else {
                newPassword.classList.remove('is-invalid');
            }

            if (!confirmPassword.value) {
                errors.push("Confirm Password is required.");
                confirmPassword.classList.add('is-invalid');
            } else if (newPassword.value !== confirmPassword.value) {
                errors.push("Password and Confirm Password do not match.");
                confirmPassword.classList.add('is-invalid');
            } else {
                confirmPassword.classList.remove('is-invalid');
            }

            if (errors.length > 0) {
                var errorHtml = '<ul class="mb-0 ps-3">';
                for (var i = 0; i < errors.length; i++) {
                    errorHtml += '<li>' + errors[i] + '</li>';
                }
                errorHtml += '</ul>';
                errorDiv.innerHTML = errorHtml;
                errorDiv.classList.remove('d-none');
                return;
            }

            btnText.classList.add('d-none');
            btnLoader.classList.remove('d-none');

            fetch('/api/auth/reset-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    email: email.value,
                    resetToken: resetToken.value,
                    newPassword: newPassword.value,
                    confirmPassword: confirmPassword.value
                })
            })
            .then(function(response) {
                if (response.ok) {
                    return response.json();
                } else {
                    return response.json().then(function(errorData) {
                        throw new Error(errorData.message || "Password reset failed");
                    });
                }
            })
            .then(function(data) {
                successDiv.innerHTML = data.message;
                successDiv.classList.remove('d-none');
                setTimeout(function() {
                    window.location.href = '/Account/Login';
                }, 3000);
            })
            .catch(function(error) {
                errorDiv.innerText = error.message || "Network error. Please try again.";
                errorDiv.classList.remove('d-none');
                btnText.classList.remove('d-none');
                btnLoader.classList.add('d-none');
            });
        });

        // Real-time validation
        document.getElementById('resetPasswordForm').addEventListener('input', function(e) {
            if (e.target.id === 'resetEmail') {
                var isValid = e.target.value && isValidEmail(e.target.value);
                e.target.classList.toggle('is-invalid', !isValid);
                if (isValid) {
                    e.target.classList.add('is-valid');
                } else {
                    e.target.classList.remove('is-valid');
                }
            } else if (e.target.id === 'resetToken') {
                var isValid = e.target.value && e.target.value.length === 6;
                e.target.classList.toggle('is-invalid', !isValid);
                if (isValid) {
                    e.target.classList.add('is-valid');
                } else {
                    e.target.classList.remove('is-valid');
                }
            } else if (e.target.id === 'newPassword') {
                var isValid = e.target.value && e.target.value.length >= 6;
                e.target.classList.toggle('is-invalid', !isValid);
                if (isValid) {
                    e.target.classList.add('is-valid');
                } else {
                    e.target.classList.remove('is-valid');
                }
            } else if (e.target.id === 'confirmPassword') {
                var password = document.getElementById('newPassword').value;
                var isValid = e.target.value && e.target.value === password;
                e.target.classList.toggle('is-invalid', !isValid);
                if (isValid) {
                    e.target.classList.add('is-valid');
                } else {
                    e.target.classList.remove('is-valid');
                }
            }
        });
    </script>
}