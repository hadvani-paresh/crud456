@{
    ViewData["Title"] = "Dashboard";
    var userName = User.Identity.Name;
    var userEmail = User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
}

<!-- Success Message -->
<div id="successMessage" class="alert alert-success border-0 shadow-sm mb-4 animate-fade-in align-items-center d-flex">
    <h4 class="alert-heading fw-bold mb-0 me-2">ðŸŽ‰</h4>
    <h5 class="mb-0 fw-bold">Dashboard Loaded Successfully!</h5>
</div>

<div class="row mb-5 animate-fade-in">
    <div class="col-12">
        <div class="card premium-card border-0 overflow-hidden">
            <div class="card-body p-5 d-flex align-items-center justify-content-between position-relative z-1">
                <div>
                    <h1 class="display-5 fw-bold mb-2">Welcome <span class="text-primary">@userName</span>!</h1>
                    <p class="fs-5 text-muted mb-0"><i class="bi bi-envelope-at me-2"></i>Email: @userEmail</p>
                </div>
                <div class="d-none d-md-block">
                    <i class="bi bi-person-circle display-1 text-primary opacity-25"></i>
                </div>
            </div>
            <!-- Decorative background elements -->
            <div class="position-absolute bg-primary opacity-10 rounded-circle" style="width: 300px; height: 300px; top: -100px; right: -50px; filter: blur(50px);"></div>
            <div class="position-absolute bg-info opacity-10 rounded-circle" style="width: 200px; height: 200px; bottom: -50px; left: -50px; filter: blur(50px);"></div>
        </div>
    </div>
</div>

<div class="row g-4 animate-fade-in" style="animation-delay: 0.1s;">
    <!-- Weather Widget -->
    <div class="col-md-4">
        <a href="/Dashboard/Weather" class="text-decoration-none">
            <div class="card border-0 shadow-lg h-100 card-weather text-white overflow-hidden transform-hover">
                <div class="card-body p-4 position-relative z-1 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Weather</h4>
                        <i class="bi bi-cloud-sun fs-1"></i>
                    </div>
                    <div class="mt-auto">
                        <p class="h3 opacity-75 mb-0" id="dashWeatherTemp">Loading...</p>
                        <p class="small opacity-50" id="dashWeatherCity">Global Forecast</p>
                    </div>
                </div>
                <div class="position-absolute bg-white opacity-10 rounded-circle" style="width: 200px; height: 200px; top: -60px; right: -60px;"></div>
            </div>
        </a>
    </div>

    <!-- Currency Widget -->
    <div class="col-md-4">
        <a href="/Dashboard/Currency" class="text-decoration-none">
            <div class="card border-0 shadow-lg h-100 card-currency text-white overflow-hidden transform-hover">
                <div class="card-body p-4 position-relative z-1 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Currency</h4>
                        <i class="bi bi-currency-exchange fs-1"></i>
                    </div>
                    <div class="mt-auto">
                         <p class="h3 opacity-75 mb-0" id="dashCurrencyRate">Loading...</p>
                         <p class="small opacity-50">USD to EUR</p>
                    </div>
                </div>
                <div class="position-absolute bg-white opacity-10 rounded-circle" style="width: 200px; height: 200px; bottom: -60px; left: -60px;"></div>
            </div>
        </a>
    </div>

    <!-- Time Widget -->
    <div class="col-md-4">
        <a href="/Dashboard/Time" class="text-decoration-none">
            <div class="card border-0 shadow-lg h-100 card-time text-white overflow-hidden transform-hover">
                <div class="card-body p-4 position-relative z-1 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Time</h4>
                        <i class="bi bi-clock-history fs-1"></i>
                    </div>
                    <div class="mt-auto">
                        <p class="h3 opacity-75 mb-0" id="currentTime">--:--</p>
                        <p class="small opacity-50">World Clock</p>
                    </div>
                </div>
                <div class="position-absolute bg-white opacity-10 rounded-circle" style="width: 150px; height: 150px; top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide success message after 3 seconds
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const msg = document.getElementById('successMessage');
                if (msg) {
                    msg.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    msg.style.opacity = '0';
                    msg.style.transform = 'translateY(-20px)';
                    setTimeout(() => msg.remove(), 500); // Remove from DOM after fade out
                }
            }, 3000);

            // Initialize Widgets
            updateTime();
            fetchDashboardWeather();
            fetchDashboardCurrency();
        });

        // Time Widget Logic
        function updateTime() {
            const now = new Date();
            const timeElement = document.getElementById('currentTime');
            // Check if element exists to prevent errors
            if(timeElement) {
                timeElement.innerText = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            }
        }
        setInterval(updateTime, 1000);

        // Weather Widget Logic (New York Default)
        async function fetchDashboardWeather() {
            try {
                // New York Coordinates: 40.71, -74.01
                const res = await fetch('https://api.open-meteo.com/v1/forecast?latitude=40.71&longitude=-74.01&current=temperature_2m&wind_speed_unit=kmh');
                const data = await res.json();
                
                if (data.current) {
                    document.getElementById('dashWeatherTemp').innerHTML = `${Math.round(data.current.temperature_2m)}&deg;C`;
                    document.getElementById('dashWeatherCity').innerText = "New York, USA";
                }
            } catch (err) {
                console.error("Dashboard Weather Error:", err);
                document.getElementById('dashWeatherTemp').innerText = "--";
            }
        }

        // Currency Widget Logic (USD to EUR)
        async function fetchDashboardCurrency() {
            try {
                const res = await fetch('https://api.frankfurter.app/latest?amount=1&from=USD&to=EUR');
                const data = await res.json();
                
                if (data.rates && data.rates.EUR) {
                    document.getElementById('dashCurrencyRate').innerText = `1 USD = ${data.rates.EUR} EUR`;
                }
            } catch (err) {
                console.error("Dashboard Currency Error:", err);
                document.getElementById('dashCurrencyRate').innerText = "--";
            }
        }
    </script>
}
